<?xml version="1.0" encoding="UTF-8"?>

<project xmlns="http://maven.apache.org/DECORATION/1.3.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/DECORATION/1.3.0 http://maven.apache.org/xsd/decoration-1.3.0.xsd"
    name="Motif">

    <skin>
        <groupId>lt.velykis.maven.skins</groupId>
        <artifactId>reflow-maven-skin</artifactId>
        <version>1.0.0</version>
    </skin>
    
    <publishDate position="bottom" format="yyyy-MM-dd" />
    <version position="bottom" />

    <body>
        <menu name="Main">
            <item name="Home" href="index.html" />
            <item name="View on GitHub" href="http://github.com/runeflobakk/motif" />
        </menu>
        <menu name="Documentation">
        	<item name="Getting Started" href="getting-started.html" />
        	<item name="The Optional type" href="optional.html" />
        </menu>
        <menu ref="reports" />
    </body>


    <custom>
        <reflowSkin>
            <smoothScroll>true</smoothScroll>
<!--             <theme>bootswatch-slate</theme> -->
            <theme>default</theme>        
            <highlightJs>true</highlightJs>
            <brand>
                <name>Motif</name>
                <href>http://github.com/runeflobakk/motif</href>
            </brand>
            <toc>top</toc>
            <topNav>Documentation|reports</topNav>

            <pages>
                <index project="motif">
                    <shortTitle>Welcome</shortTitle>
                    <breadcrumbs>false</breadcrumbs>
                    <toc>true</toc>
                    <sections>
                        <columns>2</columns>
                    </sections>
                </index>
                <documentation>
                	<shortTitle>Documentation</shortTitle>
                    <breadcrumbs>true</breadcrumbs>
                    <toc>sidebar</toc>
                </documentation>
                <developer-info>
                    <toc>sidebar</toc>
                </developer-info>
            </pages>
        </reflowSkin>
    </custom>

</project>